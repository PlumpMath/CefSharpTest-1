<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cef="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Button DockPanel.Dock="Left" Command="{Binding BackCommand, ElementName=webView}">Back</Button>
            <Button DockPanel.Dock="Left" Command="{Binding ForwardCommand, ElementName=webView}">Fwd</Button>
            <Button DockPanel.Dock="Left" Command="{Binding ReloadCommand, ElementName=webView}">Re</Button>
            <Button DockPanel.Dock="Right" Command="{Binding GoCommand}" IsDefault="{Binding ElementName=txtAddress, Path=IsKeyboardFocused}">Go</Button>
            <TextBox x:Name="txtAddress" Text="{Binding EditableAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </DockPanel>
        <cef:WebView x:Name="webView" Address="{Binding Address, Mode=TwoWay}"/>
    </DockPanel>
</Window>
